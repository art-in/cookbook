{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "server: build",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/server"
			},
			"type": "cargo",
			"command": "build",
		},
		{
			"label": "server: run",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/server"
			},
			"type": "cargo",
			"command": "run",
			"args": [
				"--release"
			]
		},
		{
			"label": "server: watch",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/server"
			},
			"type": "cargo",
			"command": "watch",
			"args": [
				"-x 'run'"
			]
		},
		{
			"label": "client: watch",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/client"
			},
			"type": "shell",
			"command": "trunk serve",
		},
		{
			"label": "client: build",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/client"
			},
			"type": "shell",
			// TODO: try to optimize wasm file size (1Mb currently)
			"command": "trunk build --release",
		},
	]
}